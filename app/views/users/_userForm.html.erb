<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="form-group">
    <%= form.text_field :name, class:"form-control", placeholder:"Name"  %>
  </div>
  <div class="form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>
  <div class="form-group">
    <%= form.text_field :contact, class:"form-control", placeholder:"Contact" %>
  </div>
  <div class="form-group">
    <% if @user.image.attached? %>
      <%= image_tag @user.image, style: "width: 200px; display: block" %>
    <% end %>
    <%= form.file_field :image, class:"form-control", placeholder:"Avatar" %>
  </div>
  <div class="form-group">
    <%= form.submit :Submit, class:'btn btn-success' %>
  </div>
<% end %>