<div class="jumbotron">
  <h1 class="display-4">
    Title: <%= @book.title %>
  </h1>
  <p class="lead">
    Description: <%= @book.description %> <br><br>
    <% if @book.cover_image.attached? %>
      <%= image_tag @book.cover_image, style: "width: 200px; display: block" %>
    <% end %>
    Coverpage: <%= @book.cover_image%> 
  </p>
</div>
<% if current_user.role == 'author' %>
  <%= link_to 'edit', edit_book_path(@book), class:"btn btn-secondary" %>
  <%= link_to 'back to books',  books_path, class:"btn btn-secondary" %>
  <%= link_to 'delete', @book, data: {turbo_method: :delete,turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
<% else %>
  <%= link_to 'back to books',  books_path, class:"btn btn-secondary" %>
<% end %>


<h2>Comments</h2>
<%= render @book.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>