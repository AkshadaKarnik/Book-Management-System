<h2 class="text-center">Sign up</h2>
<div class="row justify-content-center">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false} } , class: "form-horizontal") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :role %><br />
        <%= f.select :role, ['author', 'others'], class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :contact %><br />
        <%= f.text_field :contact, autofocus: true, autocomplete: "contact", class: "form-control" %>
      </div>  
      <div class="form-group">
        <%= f.label :image %><br />
        <%= f.file_field :image, autofocus: true, autocomplete: "image", class: "form-control" %>
      </div> 
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password , class: "control-label" %><br/>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation , class: "control-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>